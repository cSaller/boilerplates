{
  "name": "boilerplates",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "author": "Cleberson Saller (contato@csaller.com",
  "scripts": {
    "build": "rm -rf build && mkdir build && babel src -s -d build",
    "start": "node build/index.js",
    "dev": "nodemon --exec babel-node src/index.js",
    "prisma": "prisma",
    "db:update": "prisma db push && prisma generate",
    "db:seed": "babel-node src/database/seed.js",
    "heroku-postbuild": "yarn db:update && yarn db:seed && yarn build"
  },
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@prisma/client": "^2.30.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.1",
    "express-oauth-server": "^2.0.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@babel/node": "^7.16.8",
    "dotenv": "^10.0.0",
    "morgan": "^1.10.0",
    "prisma": "^2.30.3"
  },
  "prisma": {
    "schema": "src/database/schema.prisma"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
